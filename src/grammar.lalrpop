use crate::common::*;
use crate::ast::*;

grammar;

pub Package: Package = {
    <imports:PackageImport*> <items:Item*> => Package {
        imports,
        items,
    },
}

PackageImport: PackageImport = {
    "import" <ident:Id> ";" => PackageImport(ident),
}

Item: Item = {
    <m:ModDef> => Item::ModDef(m),
    <e:StructDef> => Item::StructDef(e),
    <e:UnionDef> => Item::UnionDef(e),
    <e:PortDef> => Item::PortDef(e),
}

Visibility: Visibility = {
  <v:"pub"?> => {
    if v.is_none() {
      Visibility::Private
    } else {
      Visibility::Public
    }
  }
}

ModDef: ModDef = {
    <v:Visibility> "mod" <name:Id> "{"
        <decls:(Decl ";")*>
    "}" => {
      let decls = decls.into_iter().map(|(decl, _semi)| decl).collect();
      ModDef {
        name,
        decls,
      }
    },
}

StructDef: StructDef = {
    "struct" "type" <name:Id> "{"
        <fields:(Id ":" Type ";")*>
    "}" => {
        StructDef {
            name,
            fields: fields.iter().map(|(name, _, typ, _)| (name.clone(), typ.clone())).collect::<Vec<_>>(),
        }
    },
}

UnionDef: UnionDef = {
    <ll:@L> <vis:Visibility> "union" "type" <name:Id> "{"
        <alts:Alt*>
    "}" <rr:@R> => {
        UnionDef {
            name,
            alts,
        }
    },
}

Alt: Alt = {
    <ident:Id> "(" <typs:TypeList> ")" ";" => Alt(ident, typs),
}

PortDef: PortDef = {
    <ll:@L> <vis:Visibility> "port" <name:Id> "{"
        <channels:Channel*>
    "}" <rr:@R> => {
        PortDef {
            name,
            channels,
        }
    },
}

Channel: Channel = {
    <dir:ChannelDir> <id:Id> ":" <typ:Type> ";" => Channel(dir, id, typ),
}

ChannelDir: ChannelDir = {
    "mosi" => ChannelDir::Mosi,
    "miso" => ChannelDir::Miso,
}

TypeList: Vec<Arc<Type>> = {
    <args:((Type ("," Type)* ","?)?)> => {
        if let Some((typ, args, _comma)) = args {
            let mut results = vec![typ];
            for (_comma, typ) in args {
                results.push(typ);
            }
            results
        } else {
            vec![]
        }
    },
}

Decl: Decl = {
    <c:Component> => Decl::Component(c),
    <m:Submodule> => Decl::Submodule(m),
    <p:Port> => Decl::Port(p),
    <c:Wire> => Decl::Wire(c),
}

Component: Component = {
    "incoming" <name:Id> ":" <typ:Type> => {
        Component {
            kind: ComponentKind::Incoming,
            name,
            typ: typ,
            clock: None,
            reset: None,
        }
    },
    "outgoing" <name:Id> ":" <typ:Type> => {
        Component {
            kind: ComponentKind::Outgoing,
            name,
            typ: typ,
            clock: None,
            reset: None,
        }
    },
    "node" <name:Id> ":" <typ:Type> => {
        Component {
            kind: ComponentKind::Node,
            name,
            typ: typ,
            clock: None,
            reset: None,
        }
    },
    "reg" <name:Id> ":" <typ:Type> "on" <clock:Path> => {
//        let reset = rst.map(|s| s.1); // .1 ignores the "reset" keyword
        Component {
            kind: ComponentKind::Reg,
            name,
            typ,
            clock: Some(clock),
            reset: None,
        }
    },
}

Submodule: Submodule = {
    "mod" <name:Id> "of" <moddef:Path> => Submodule { name, moddef },
}

Port: Port = {
    <role:PortRole> "port" <name:Id> "of" <portdef:Path> => Port { role, name, portdef },
}

PortRole: PortRole = {
    "master" => PortRole::Master,
    "slave" => PortRole::Slave,
}

Wire: Wire = {
    <target:Path> ":=" <e:Expr> => Wire(target, WireType::Continuous, e),
    <target:Path> "<=" <e:Expr> => Wire(target, WireType::Latched, e),
}

Type: Arc<Type> = {
    "Clock" => Arc::new(Type::Clock),
    "Word" "[" <w:Nat> "]" => Arc::new(Type::Word(w)),
    <path:Path> => Arc::new(Type::TypeRef(path)),
}

pub Expr: Arc<Expr> = {
    <e:ExprLet> => e,
    <e:ExprMatch> => e,
    <e:ExprIf> => e,
    <e:ExprCall> => e,
}

ExprLet: Arc<Expr> = {
    <ll:@L> "let" <x:Id> <ascription:(":" Type)?> "=" <e:Expr> "in"
    <b:Expr> <rr:@R> => {
        let type_ascription = ascription.map(|(_of, typ)| typ);
        Arc::new(Expr::Let(x, type_ascription, e, b))
    },
}

ExprMatch: Arc<Expr> = {
    <ll:@L> "match" <ascription:(":" Type)?> <e:Expr> "{"
        <arms:MatchArm*>
    "}" <rr:@R> => {
        let type_ascription = ascription.map(|(_of, typ)| typ);
        Arc::new(Expr::Match(e, type_ascription, arms))
    },
}

MatchArm: MatchArm = {
    <pat:Pat> "=>" <e:Expr> ";" => MatchArm(pat, e),
}

Pat: Pat = {
    <id:Ctor> => Pat::At(id.as_str()[1..].into(), vec![]),
    <id:Ctor> "(" <subpats:PatList> ")" => {
        Pat::At(id.as_str().into(), subpats)
    },
    <id:Id> => Pat::Bind(id.into()),
    "otherwise" => Pat::Otherwise,
}

PatList: Vec<Pat> = {
    <pats:((Pat ("," Pat)* ","?)?)> => {
        if let Some((pat, pats, _comma)) = pats {
            let mut results = vec![pat];
            for (_comma, pat) in pats {
                results.push(pat);
            }
            results
        } else {
            vec![]
        }
    },
}

ExprIf: Arc<Expr> = {
    <ll:@L> "if" <cond:Expr> "{"
        <e1:Expr>
    <elseifs:("}" "else" "if" Expr "{" Expr)*>
    "}" "else" "{"
        <elseexpr:Expr>
    "}" <rr:@R> => {
        let mut result = elseexpr;

        for (_, _, _, elseif_cond, _, elseif_body) in elseifs.into_iter().rev() {
            result = Arc::new(Expr::If(elseif_cond, elseif_body, result));
        }

        Arc::new(Expr::If(cond, e1, result))
    },
}

ExprCall: Arc<Expr> = {
//    <ll:@L> <name:Ctor> <rr:@R> =>  Arc::new(Expr::Call(name, vec![], vec![])),
    <ll:@L> <name:Ctor> "(" <es:ExprList> ")" <rr:@R> =>  Arc::new(Expr::Ctor(name, es)),                            

    "cat" "(" <es:ExprList> ")" => {
        Arc::new(Expr::Cat(es))
    },

//    <ll:@L> <name:Id> "(" <es:ExprList> ")" <rr:@R> => {
//        Arc::new(Expr::FnCall(name, es))
//    },
    <ll:@L> <s:ExprCall> "->" <name:Id> "(" <es:ExprList> ")" <rr:@R> => {
        Arc::new(Expr::MethodCall(s, name, es))
    },
    <ll:@L> <s:ExprCall> "->" "as" "(" <typ:Type> ")" <rr:@R> => {
        Arc::new(Expr::As(s, typ))
    },
    <e:ExprIdx> => e,
}

ExprIdx: Arc<Expr> = {
//    <ll:@L> <e:ExprIdx> "->" <field:Id> <rr:@R> => Arc::new(Expr::IdxField(e, field.clone())),
    <e:ExprIdx> "[" <i:Nat> "]" => Arc::new(Expr::Idx(e, i)),
    <ll:@L> <e:ExprIdx> "[" <j:Nat> ".." <i:Nat> "]" <rr:@R> => Arc::new(Expr::IdxRange(e, j, i)),
    <e:ExprBase> => e,
}

ExprBase: Arc<Expr> = {
    <e:ExprVec> => e,
//    <e:ExprStruct> => e,
//    <e:ExprWith> => e,
//    <e:ExprAs> => e,
    <e:ExprLit> => e,
    <e:ExprReference> => e,
    "(" <e:Expr> ")" => e,
}

FieldExprList: Vec<(String, Arc<Expr>)> = {
    <fields:((Id "=" Expr ("," Id "=" Expr)* ","?)?)> => {
        if let Some((name, _eqsign, expr, fields, _comma)) = fields {
            let mut results = vec![(name.to_string(), expr)];
            for (_comma, name, _eqsign, expr) in fields {
                results.push((name.to_string(), expr));
            }
            results
        } else {
            vec![]
        }
    },
}

