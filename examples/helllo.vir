// vim: ft=bitsy
public module Top {
    incoming clk : Clock;
    incoming in : Word[8];
    outgoing out : Word[8];

    submodule buf of Buffer;
    buf.in := in;

    out := buf.out->add(in);
}

module Buffer {
    incoming clk : Clock;
    incoming in : Word[8];
    outgoing out : Word[8] := in;
    reg buf : Word[8] on clk <= in;
}
