pub mod Top {
    incoming clk : Clock;
    incoming reset : Word[1];
    outgoing out : Word[8];

    reg r : Word[8] on clk;
    r <= reset->mux(10w8, r->add(1));

    mod buffer of Buffer;
    buffer.clk := clk;
    buffer.in := r;
    out := buffer.out;
}

mod Buffer {
    incoming clk : Clock;
    incoming in : Word[8];
    outgoing out : Word[8];

    reg r : Word[8] on clk;
    r <= in;
    out <= r;
}
